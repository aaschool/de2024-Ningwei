String readXAcceleration() {
  // Read temperature as Celsius (the default)
  float t = event.acceleration.x;
  // Convert temperature to Fahrenheit
  //t = 1.8 * t + 32;
  if (isnan(t)) {
    Serial.println("Failed to read from sensor!");
    return "";
  }
    else {
    Serial.println(t);
    return String(t);
  }
}

String readYAcceleration() {
  float h = event.acceleration.y;
  if (isnan(h)) {
    Serial.println("Failed to read from sensor!");
    return "";
  }
  else {
    Serial.println(h);
    return String(h);
  }
}

String readZAcceleration() {
